{
   "action": {
      "default_popup": "menu.html"
   },
   "background": {
      "service_worker": "background.js"
   },
   "web_accessible_resources": [
    {
      "resources": [ "content_new.css"],
      "matches": [ "https://*.facebook.com/*" ]
    }
 ],
   "host_permissions": [
    "https://*.facebook.com/*"
   ],
   "content_scripts": [ {
      "all_frames": true,
      "css": ["content.css"],
      "js": ["content.js"],
      "matches": [ "https://*.facebook.com/*" ],
      "run_at": "document_end"
   } ],
   "description": "Better FB Gaming. Emotes + Chat Extension with Settings",
   "icons": {
      "128": "icons/ico.png"
   },
   "manifest_version": 3,
   "name": "Better FB Gaming",
   "permissions": [ "storage", "contextMenus", "activeTab", "tabs"],
   "version": "0.1.6"
}
