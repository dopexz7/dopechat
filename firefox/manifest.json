{
    "manifest_version": 2,
    "name": "FB Gaming Better ",
    "version": "0.3.1.1",
    "description": "Emotes + Chat Extension with Settings",
    "icons": {
        "128": "icons/ico.png"
    },
    "permissions": [ "storage"],
    "browser_action": {
        "default_popup": "menu.html"
    },
    "web_accessible_resources": ["content_new.css"],
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/gaming/*",  "*://*.facebook.com/*/videos/*"
            ],
            "all_frames": true,
            "run_at": "document_end",
            "js": [
                "content.js", "jquery-3.6.0.min.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "background":
    {
        "scripts": ["background.js"]
    },
    "applications": {
        "gecko": {
            "id": "betterfbgaming@dopexz7",
            "strict_min_version": "57.0"
        }
    }
}